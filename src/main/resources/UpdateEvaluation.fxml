<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UpdateEvaluation" style="-fx-background-color: #800080;">
    <children>
        <TextField fx:id="TFIdJury" layoutX="100.0" layoutY="50.0" promptText="ID Jury" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF;"/>
        <TextField fx:id="TFIdProjet" layoutX="100.0" layoutY="100.0" promptText="ID Projet" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF;"/>
        <TextField fx:id="TFIdHackathon" layoutX="100.0" layoutY="150.0" promptText="ID Hackathon" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF;"/>
        <TextField fx:id="TFNoteTech" layoutX="100.0" layoutY="200.0" promptText="Note Technique" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF;"/>
        <TextField fx:id="TFNoteInnov" layoutX="100.0" layoutY="250.0" promptText="Note Innov" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF;"/>
        <DatePicker fx:id="TFDate" layoutX="100.0" layoutY="300.0" style="-fx-font-size: 14px;"/>

        <Button text="Update Evaluation" layoutX="100.0" layoutY="350.0" onAction="#updateEvaluation" style="-fx-background-color: #4fa3f7; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>

        <!-- Back button -->
        <Button text="Back" layoutX="300.0" layoutY="350.0" onAction="#backToAfficherEvaluation" style="-fx-background-color: #4fa3f7; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
    </children>
</AnchorPane>
