<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="498.0" prefWidth="625.0" style="-fx-background-color: #800080;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AfficherEvaluation">
    <children>
        <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" layoutX="480.0" layoutY="10.0">
            <image>
                <Image url="@ss.png" />
            </image>
        </ImageView>
        <!-- ListView with blue stylish design -->
        <ListView fx:id="listView" layoutX="11.0" layoutY="100.0" prefHeight="298.0" prefWidth="602.0" style="-fx-background-color: #e6f2ff; -fx-border-color: #4fa3f7; -fx-border-width: 2px;                          -fx-font-size: 14px; -fx-padding: 10px; -fx-background-insets: 0; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.4), 5, 0, 2, 2);" />

        <Button fx:id="generatePdfButton" layoutX="380.0" layoutY="408.0" onAction="#generatePdf" style="-fx-background-color: #4fa3f7; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;" text="Generate PDF" />

        <!-- Back button with added style -->
        <Button layoutX="506.0" layoutY="408.0" onAction="#backToAjouterEvaluation" style="-fx-background-color: #4fa3f7; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;" text="Back" />
    </children>
</AnchorPane>
