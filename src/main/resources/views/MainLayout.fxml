      spacing="20"
      style="-fx-background-color: #ffffff; -fx-padding: 20;">

    <Label text="Communities"
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #1e0425;"/>

    <ScrollPane fitToWidth="true">
        <content>
            <FlowPane fx:id="communityCardsContainer" hgap="20" vgap="20" alignment="TOP_CENTER"/>
        </content>
    </ScrollPane>
</VBox>
