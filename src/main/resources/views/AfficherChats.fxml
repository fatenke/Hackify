<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="/styles/AfficherChatsStyle.css"
            fx:controller="Controllers.AfficherChatsController">

    <!-- Top: Header Section (unchanged) -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #8A2BE2; -fx-padding: 15;">
            <Label fx:id="chatTitle" text="Chat Title"
                   style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button fx:id="returnButton" text="Return" onAction="#handleReturn"
                    style="-fx-background-color: #4A148C; -fx-text-fill: white; -fx-background-radius: 15; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Left: Sidebar (unchanged) -->
    <left>
        <VBox spacing="10" prefWidth="300" style="-fx-background-color: #4A148C; -fx-padding: 15;">
            <HBox spacing="5" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search..."
                           style="-fx-background-color: white; -fx-text-fill: black; -fx-border-radius: 10; -fx-padding: 5;"/>
                <Button fx:id="searchButton" text="🔍" onAction="#handleSearch"
                        style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-background-radius: 10; -fx-padding: 5;"/>
                <Button fx:id="cancelButton" text="✖" onAction="#handleCancelSearch"
                        style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 5;"/>
            </HBox>
            <Label text="Existing Chats"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <ListView fx:id="chatsListView"
                      style="-fx-background-color: white; -fx-border-color: #B39DDB; -fx-border-radius: 10;"/>
        </VBox>
    </left>

    <!-- Center: Chat Messages with Polls -->
    <center>
        <StackPane>
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #F5F5F5;">
                <!-- Chat Messages -->
                <ListView fx:id="messagesListView" VBox.vgrow="ALWAYS"
                          style="-fx-border-color: #B39DDB; -fx-border-radius: 10;"/>

                <!-- Poll Creation Section -->
                <VBox fx:id="pollCreationBox" spacing="5" style="-fx-padding: 10; -fx-background-color: #E0E0E0; -fx-border-radius: 10; -fx-border-color: #B39DDB;">
                    <Label text="Create a Poll" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="pollQuestionField" promptText="Enter your question..."/>
                    <TextField fx:id="pollOption1Field" promptText="Option 1"/>
                    <TextField fx:id="pollOption2Field" promptText="Option 2"/>
                    <Button fx:id="createPollButton" text="Create Poll" onAction="#handleCreatePoll"
                            style="-fx-background-color: #0078ff; -fx-text-fill: white; -fx-background-radius: 5;"/>
                </VBox>

                <!-- Poll Display Section -->
                <VBox fx:id="pollDisplayBox" spacing="10" style="-fx-padding: 10; -fx-background-color: #FFFFFF; -fx-border-radius: 10; -fx-border-color: #B39DDB;">
                    <Label fx:id="pollQuestionLabel" text="Poll Question" style="-fx-font-weight: bold;"/>
                    <VBox fx:id="pollOptionsBox" spacing="5">
                        <!-- Options will be dynamically added here in the controller -->
                    </VBox>
                    <Button fx:id="voteButton" text="Vote" onAction="#handleVote"
                            style="-fx-background-color: #0078ff; -fx-text-fill: white; -fx-background-radius: 5;"/>
                </VBox>

                <!-- Message Input Box -->
                <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                    <TextField fx:id="messageField" promptText="Type your message..."
                               HBox.hgrow="ALWAYS"/>
                    <Button fx:id="sendButton" text="Send" onAction="#handleSendMessage"/>
                </HBox>
                <HBox fx:id="suggestionBox" spacing="10" alignment="CENTER"
                      style="-fx-padding: 5; -fx-background-color: #E0E0E0; -fx-border-radius: 10; -fx-border-color: #B39DDB;">
                </HBox>
            </VBox>
            <!-- Search Results Overlay (unchanged) -->
            <ListView fx:id="searchResultsListView" visible="false" managed="false"
                      style="-fx-background-color: rgba(255,255,255,0.95); -fx-border-color: #B39DDB; -fx-border-radius: 10;"/>
            <Label fx:id="noResultsLabel" text="😞 No results found" visible="false" managed="false"
                   style="-fx-font-size: 16px; -fx-text-fill: gray;"/>
        </StackPane>
    </center>
</BorderPane>